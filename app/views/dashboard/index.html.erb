<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
      <div class='dashboard-info'>
        <h1>Encomendas</h1>
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope='col'>Cliente</th>
              <th scope='col'>Produto</th>
              <th scope='col'>Quantidade</th>
              <th scope='col'>Total</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @encomendas.each do |encomenda| %>
              <tr class='dashboard-info__not-solved'>
                <td><%= clienteId(encomenda.cliente_id).name %></td>
                <td><%= prodId(encomenda.produto_id).nome %></td>
                <td><%= encomenda.quantidade %></td>
                <td><%= ((prodId(encomenda.produto_id).preco).to_i * (encomenda.quantidade).to_i).to_s+' €' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-4">

        <h1>Casas ocupadas</h1>

        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope='col'>Nome</th>
              <th scope='col'>Data CheckIn</th>

            </tr>
          </thead>

          <tbody>
            <% @ocupada.each do |casa| %>
              <tr>
                <td><%= casa.nome %></td>
                <td><%= casa.updated_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-md-6">
        <h1>Casas à espera de limpe</h1>

        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope='col'>Nome</th>
              <th scope='col'>Data limpe</th>

            </tr>
          </thead>

          <tbody>
            <% @suja.each do |casa| %>
              <tr>
                <td><%= casa.nome %></td>
                <td><%= casa.updated_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
