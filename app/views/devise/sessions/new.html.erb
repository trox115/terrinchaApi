<div class='col-md-8 login-back'>
</div>
<div class='col-md-4 center'>
<div class='formulario'>
<div class='image-logo'>
<%= image_tag 'logo.png' %>
</div>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<div class='input'>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class:'text'%>
  </div>

  <div class="field">
    <%= f.password_field :password,autocomplete: "current-password" ,placeholder:'Palavra Passe' ,class:'text'%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Lembrar de mim' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in",class:'btn btn-info btn-lg btn-block text-uppercase btn-rounded'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>

